<table class="table table-striped">
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>Role</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
			<tr id="user-<%= user.id %>">
				<td><%= user.first_name %></td>
				<td><%= user.last_name %></td>
				<td><%= user.email %></td>
				<td><%= user.role %></td>
				<td>
					<%= link_to 'Edit', edit_user_path(user) %> |
					<%= link_to 'Delete', user_path(user), method: :delete %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>