<h1>Advertisers</h1>
<%= link_to 'Add Advertiser', new_advertiser_path, class: 'btn btn-success pull-right' %>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Company</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>Address</th>
			<th>City</th>
			<th>Postcode</th>
			<th>Country</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @advertisers.each do |advertiser| %>
			<tr>
				<td><%= advertiser.company %></td>
				<td><%= advertiser.first_name %></td>
				<td><%= advertiser.last_name %></td>
				<td><%= advertiser.email %></td>
				<td><%= advertiser.address %></td>
				<td><%= advertiser.city %></td>
				<td><%= advertiser.postcode %></td>
				<td><%= advertiser.country %></td>
				<td>
					<% if can? :read, advertiser %>
						<%= link_to 'View', advertiser_path(advertiser) %>
					<% end %>
					<% if can? :destroy, advertiser %>
						| <%= link_to 'Delete', advertiser_path(advertiser), method: :delete %>
					<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>