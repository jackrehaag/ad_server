<%= form_for @advertiser do |f| %>
	<%= f.label :company %>
	<%= f.text_field :company %>
	<%= f.label :first_name %>
	<%= f.text_field :first_name %>
	<%= f.label :last_name %>
	<%= f.text_field :last_name %>
	<%= f.label :email %>
	<%= f.text_field :email %>
	<%= f.label :address %>
	<%= f.text_field :address %>
	<%= f.label :city %>
	<%= f.text_field :city %>
	<%= f.label :postcode %>
	<%= f.text_field :postcode %>
	<%= f.label :country %>
	<%= f.country_select :country, { priority_countries: ["GB", "FR"] }, { selected: "GB" } %>

	<%= f.submit %>
<% end %>